{
  "info": {
    "name": "Order Execution Engine",
    "description": "DEX Order Execution with WebSocket Support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Create Market Order",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"orderType\": \"market\",\n  \"tokenIn\": \"SOL\",\n  \"tokenOut\": \"USDC\",\n  \"amountIn\": 1.0,\n  \"slippage\": 0.01\n}"
        },
        "url": "{{baseUrl}}/api/orders/execute"
      }
    },
    {
      "name": "Get Order Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/orders/{{orderId}}"
      }
    },
    {
      "name": "Get Queue Metrics",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/api/metrics"
      }
    }
  ]
}
